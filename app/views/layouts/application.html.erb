<!DOCTYPE html>
<html>
  <head>
    <title>FO</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav>
      <div>
        <%= link_to "User Sign Up", new_user_path %>
        <%= link_to "New Family", new_family_path %>
    
        <% if current_user %>
          Logged as <%= current_user.email %> | <%= link_to "Logout", sessions_path, data: { 'turbo-method': :delete} %>
        <% else %>
          <%= link_to "User Login", new_session_path %>
        <% end %>
      </div>
    </nav>  

    <% flash.each do |key, message| %>
      <div class="flash <%= key %>"><%= message %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
